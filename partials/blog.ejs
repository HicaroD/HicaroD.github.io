<%- include(metaconfig.paths.layouts.start); %>
<main id="blog">
  <!-- TODO: get list of posts and insert here in a loop --!>

  <% posts.forEach(function(post){ -%>
    <div class="post">
      <h1 class="title"><a class= "link" href="#"><%= post.title %></a></h1>
      <p><%= post.description %></p>
      <p class="date"><%= post.date %></p>
      <div class="tags">
      <% post.tags.forEach(function(tag){ -%>
        <p><a class="link" href="#">#<%= tag %></a></p>
      <% }); -%>
      </div>
    </div>
    <hr class="line">
  <% }); -%>
</main>
<%- include(metaconfig.paths.layouts.end); %>
